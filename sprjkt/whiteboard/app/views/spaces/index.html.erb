<style>
	body {
		background-color: #d0e4fe;
	}

	p {
		font-family: "Times New Roman"'
		font-size: 20px;
	}
</style>

<body>
<p id="notice"><%= notice %></p>

<h1>Listing Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
	  <th></th>
	  <th></th>
	  <th></th>
      <th>Spacename</th>
	  <th></th>
	  <th></th>
	  <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.user.username %></td>
		<td></td>
		<td></td>
		<td></td>
        <td><%= space.spacename %></td>
			<% if user_signed_in? %>
        		<td><%= link_to 'Show', space %></td>
					<% if (space.user.id == current_user.id) %>
        				<td><%= link_to 'Edit', edit_space_path(space) %></td>
        				<td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					<% end %>
			<% end %>
		<td></td>
		<td></td>
		<td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Space', new_space_path %>

</body>
